<header>
    <nav class="w-full p-4 bg-white shadow-lg">
        <div class="flex flex-wrap justify-around items-center mx-auto ">
            <a href="/">
                <div class="flex items-center justify-between">
                    <div>
                        <img src="/img/bunlaithong.png" class="w-20" alt="">
                    </div>
                    <div class="flex flex-row pl-2 items-baseline">
                        <div class="flex-shrink pl-1 pr-2"><i class="fa fa-solid fa-home-alt fa-fw fa-inverse"
                                style="color: rgb(120 113 108);"></i>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-stone-500 font-semibold text-base">หน้าแรก</h3>
                        </div>
                    </div>
                </div>
            </a>
            <div class="lg:block hidden">
                <form>
                    <div class="flex">
                        <label for="search-dropdown"
                            class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">ค้นหา</label>
                        <div class="relative w-full">
                            <input type="text" id="search-dropdown"
                                class="block p-2 w-full overflow-hidden z-20 text-base text-gray-900 bg-white rounded-lg border border-gray-400 focus:ring-blue-500 focus:border-blue-500 "
                                placeholder="ค้นหาร้านอาหาร" required>
                            <button type="submit"
                                class="absolute search-btn top-0 right-0 p-2.5 h-full text-sm font-medium text-white rounded-r-lg border border-gray-700 transition duration-200 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300">
                                <div class="flex-shrink ">
                                    <i class="fa fa-solid search-icon fa-search fa-fw fa-inverse"></i>
                                </div>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="flex items-center lg:hidden lg:order-2">
                <button type="button" data-collapse-toggle="navbar-search" aria-controls="navbar-search"
                    aria-expanded="false"
                    class="inline-flex items-center p-2 ml-1 text-sm text-black rounded-lg hover:text-black hover:bg-white focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
            <div class="justify-between items-center w-full lg:flex lg:w-auto lg:order-1" id="navbar-search">
                <div class="my-3 lg:my-0 block lg:hidden">
                    <form>
                        <div class="flex">
                            <label for="search-dropdown"
                                class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">ค้นหา</label>
                            <div class="relative w-full">
                                <input type="search" id="search-dropdown"
                                    class="block p-2 w-full z-20 text-base text-gray-900 bg-white rounded-lg border border-gray-400 focus:ring-blue-500 focus:border-blue-500 "
                                    placeholder="ค้นหาร้านอาหาร" required>
                                <button type="submit"
                                    class="absolute search-btn top-0 right-0 p-2.5 h-full text-sm font-medium text-white rounded-r-lg border border-gray-700 transition duration-200 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300">
                                    <div class="flex-shrink ">
                                        <i class="fa fa-solid search-icon fa-search fa-fw fa-inverse"></i>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="lg:flex space-y-2 lg:space-y-0">
                    <% if (loggedIn) { %>
                        <div class="flex items-center justify-between lg:justify-normal lg:gap-6">
                            <a href="/profile" class="text-stone-500 hover:underline font-semibold text-base"><%= userData.firstname %></a>
                            <a href="/logout">
                                <button
                                    class="relative shadow-lg inline-flex items-center justify-center p-0.5 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-red-500 to-red-600 group-hover:from-cyan-500 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-cyan-200 dark:focus:ring-cyan-800">
                                    <span
                                        class="relative px-5 py-2 transition-all text-white ease-in duration-75 bg-opacity-100 text-base font-semibold dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                                        ออกจากระบบ
                                    </span>
                                </button>
                            </a>
                        </div>
                    <% } else { %>
                        <div class="flex flex-row pl-2 items-baseline">
                            <div class="flex-shrink pl-1 pr-2"><i class="fa fa-solid fa-sign-in fa-fw fa-inverse"
                                    style="color: rgb(120 113 108);"></i>
                            </div>
                            <div class="flex-1">
                                <a href="/login"
                                    class="text-stone-500 font-semibold hover:underline text-base">เข้าสู่ระบบ</a>
                            </div>
                        </div>
                        <div class="flex flex-row pl-2 items-baseline">
                            <div class="flex-shrink pl-1 pr-2"><i class="fa fa-solid fa-sign-in fa-fw fa-inverse"
                                    style="color: rgb(120 113 108);"></i>
                            </div>
                            <div class="flex-1">
                                <a href="/register"
                                    class="text-stone-500 font-semibold hover:underline text-base">ลงชื่อเข้าใช้</a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>


<style>

.search-icon {
    color: rgb(120 113 108);
}

.search-btn:hover .search-icon {
    color: white;
}

</style>

<script>

    const button = document.querySelector('[data-collapse-toggle]');
    const target = document.querySelector(`#${button.getAttribute('aria-controls')}`);

    button.addEventListener('click', () => {
        target.classList.toggle('hidden');
    });

</script>